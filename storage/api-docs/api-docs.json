{
    "openapi": "3.0.0",
    "info": {
        "title": "LOTTERY API",
        "description": "尾牙抽獎 api",
        "contact": {
            "name": "Harbor.liu",
            "email": "harbor.liu@104.com.tw"
        },
        "version": "0.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:8000/",
            "description": "local 環境"
        }
    ],
    "paths": {
        "/api/award/create": {
            "post": {
                "tags": [
                    "獎品"
                ],
                "summary": "新增加碼獎項",
                "description": "新增加碼獎項",
                "requestBody": {
                    "description": "API傳入的內容",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "awardName": {
                                        "description": "獎項名稱",
                                        "type": "string",
                                        "example": "一獎"
                                    },
                                    "money": {
                                        "description": "金額",
                                        "type": "integer",
                                        "example": 3000
                                    },
                                    "number": {
                                        "description": "獎項數量，非必填（default 10 個）",
                                        "type": "integer",
                                        "default": 10,
                                        "example": 5
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "新增後結果",
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "獎項已存在",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "status code",
                                            "type": "integer",
                                            "default": 500,
                                            "example": 400
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "該獎項已存在！"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/draw": {
            "post": {
                "tags": [
                    "抽獎"
                ],
                "summary": "抽獎",
                "description": "抽獎",
                "requestBody": {
                    "description": "API傳入的內容",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "awardName": {
                                        "description": "獎項名稱",
                                        "type": "string",
                                        "example": "一獎"
                                    },
                                    "candidateNumber": {
                                        "description": "抽幾個人",
                                        "type": "integer",
                                        "example": 1
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "抽獎",
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Candidate.Candidate"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "此獎項剩餘數量不足",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "status code",
                                            "type": "integer",
                                            "default": 500,
                                            "example": 400
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "此獎項剩餘數量不足，抽不出那麼多人！"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "找不到獎項",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "status code",
                                            "type": "integer",
                                            "default": 500,
                                            "example": 500
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "找不到對應的獎項！"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/award/all": {
            "get": {
                "tags": [
                    "獎品"
                ],
                "summary": "列出所有參加者",
                "description": "列出所有參加者",
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "列出所有獎項",
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Award.Award"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/candidate/all": {
            "get": {
                "tags": [
                    "參加者"
                ],
                "summary": "列出所有參加者",
                "description": "列出所有參加者",
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "列出所有參加者",
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Candidate.Candidate"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/winner/all": {
            "get": {
                "tags": [
                    "參加者"
                ],
                "summary": "列出所有得獎者",
                "description": "列出所有得獎者",
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "列出所有得獎者",
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Candidate.Winner"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "目前沒有得獎者",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "status code",
                                            "type": "integer",
                                            "default": 500,
                                            "example": 400
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "目前沒有得獎者！"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/candidate/not-win": {
            "get": {
                "tags": [
                    "參加者"
                ],
                "summary": "列出沒得獎的參加者",
                "description": "列出沒得獎的參加者",
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "列出沒得獎的參加者",
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Candidate.Candidate"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "apim 驗證沒過",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "code": {
                                            "description": "錯誤代碼，errorCode 為五碼的數字(string)",
                                            "type": "string",
                                            "default": "00000",
                                            "example": "00006"
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "不允許的請求，只可透過 APIM2 呼叫此 API"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/winner": {
            "get": {
                "tags": [
                    "參加者"
                ],
                "summary": "列出指定獎項的得獎者",
                "description": "列出指定獎項的得獎者",
                "parameters": [
                    {
                        "name": "awardName",
                        "in": "query",
                        "description": "獎項名稱",
                        "required": true,
                        "example": "一獎"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Candidate.Winner"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "獎項未有得獎者",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "status code",
                                            "type": "integer",
                                            "default": 500,
                                            "example": 400
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "目前此獎項尚未有中獎者！"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "找不到獎項",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "status code",
                                            "type": "integer",
                                            "default": 500,
                                            "example": 500
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "找不到對應的獎項！"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/withdraw": {
            "put": {
                "tags": [
                    "抽獎"
                ],
                "summary": "參加者放棄獎項",
                "description": "參加者放棄獎項",
                "requestBody": {
                    "description": "API傳入的內容",
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "staffCode": {
                                        "description": "員編",
                                        "example": [
                                            "0001"
                                        ]
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "正常回傳",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "description": "新增後結果",
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "沒中獎的人不能放棄得獎",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "description": "status code",
                                            "type": "integer",
                                            "default": 500,
                                            "example": 400
                                        },
                                        "message": {
                                            "description": "錯誤訊息",
                                            "type": "string",
                                            "default": "",
                                            "example": "沒中獎的人不能放棄得獎！"
                                        },
                                        "details": {
                                            "description": "額外錯誤資訊",
                                            "example": []
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Award.Award": {
                "title": "Award.Award",
                "description": "獎項",
                "properties": {
                    "name": {
                        "description": "獎項名",
                        "type": "string",
                        "example": "一獎"
                    },
                    "money": {
                        "description": "金額",
                        "type": "integer",
                        "example": 100000
                    },
                    "number": {
                        "description": "獎品剩餘數量",
                        "type": "integer",
                        "example": 10
                    }
                },
                "type": "object"
            },
            "Candidate.Candidate": {
                "title": "Candidate.Candidate",
                "description": "參加者",
                "properties": {
                    "staffCode": {
                        "description": "員編",
                        "type": "string",
                        "example": "0001"
                    },
                    "staffName": {
                        "description": "員工姓名",
                        "type": "string",
                        "example": "Obama"
                    },
                    "departmentCode": {
                        "description": "部門編號",
                        "type": "string",
                        "example": "AAA1"
                    },
                    "department": {
                        "description": "部門名稱",
                        "type": "string",
                        "example": "工程處 求才工程部"
                    },
                    "onBoardDate": {
                        "description": "到職日",
                        "type": "string",
                        "example": "2000/01/01"
                    }
                },
                "type": "object"
            },
            "Candidate.Winner": {
                "title": "Candidate.Winner",
                "description": "得獎者",
                "properties": {
                    "awardName": {
                        "description": "獎項名",
                        "type": "string",
                        "example": "一獎"
                    },
                    "winners": {
                        "description": "得獎人們",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Candidate.Candidate"
                        }
                    }
                },
                "type": "object"
            }
        }
    },
    "security": [
        []
    ]
}